<p id="notice"><%= notice %></p>

<% @cows.each do |cow| %>

  <div class="row">
    <div class="col-md-8">
      <div class="featurette featurette<%= cow.id %>" id="about">
        <img class="featurette-image img-responsive featurette-image<%= cow.id %>" src="<%= cow.image_url %>">
        <!-- <h2 class="featurette-heading text-center">
          <a><%= cow.name %></a>
          <span class="text-muted"><%= cow.heading %></span>
        </h2>
          <% cow.calves.each do |calf| %>
            <p class="lead text-center"><%= calf.name %></p>
          <% end %> -->
      </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-info stats stats<%= cow.id %>">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Cow Transactions Panel</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Calf Id #</th>
                                <th>Order Date</th>
                                <th>Order Time</th>
                                <th>Amount (USD)</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% cow.calves.each do |calf| %>
                            <tr>
                                <td><%= calf.id %></td>
                                <td>10/21/2013</td>
                                <td>3:29 PM</td>
                                <td>$321.33</td>
                            </tr>
                          <% end %>
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
  </div>
<% end %>


<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Pie Chart</h3>
            </div>
            <div class="panel-body">
                <%= pie_chart Cow.group(:name).sum(:money) %>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Column Graph</h3>
            </div>
            <div class="panel-body">
                <%= column_chart Cow.group(:name).sum(:money) %>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Bar Graph</h3>
            </div>
            <div class="panel-body">
                <%= bar_chart Cow.group(:name).sum(:money) %>
            </div>
        </div>
    </div>
</div>



